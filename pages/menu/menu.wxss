/* pages/menu/menu.wxss */
page{
  background: #e2e9e9;
}
.content{
  width: 94%;
  height: 100vh;
  position: relative;
}
.contentTitle{
   width: 97%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: white;
  border-radius: 34rpx;
  background: rgb(61, 100, 158);
  padding: 10rpx;
  font-size: 28rpx;
  margin-left: 3%;
}
.menuList{
  width: 100%;
  background: white;
  display: flex;
  flex-wrap: wrap;
  margin-left: 3%;
  border-radius: 34rpx;
}
.menuItem{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  font-size: 28rpx;
  /* border: 1px solid  #DCDCDC; */
}
image{
  width: 50rpx;
  height: 50rpx;
}
.contentFooter{
  width: 100%;
  font-size:35rpx;
  position: absolute;
  bottom:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #7744ff;
    font-size: 35rpx;

}