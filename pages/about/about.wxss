/* pages/about/about.wxss */
/* map/map.wxss */
.aboutContent{
  width: 100%;
  height: 100vh;
  background: #eee;
  position: relative;
}
.aboutHeader{
  /* width: 95%; */
  height: 45%;
  background:rgb(148, 228, 148);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 10rpx rgb(129, 126, 126);
}
.mapIcon image{
  width: 250rpx;
  height: 250rpx;
}
.mapIcon{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.mapVersion{
   color: white;
}
.mapDesc{
   color: white;
   margin-bottom: -20rpx;
}
.mapBtn{

}
.mapBtn button{
  width: 250rpx;
  height: 60rpx;
  font-size: 30rpx;
  padding: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mapBtn image{
  width: 30rpx;
  height: 30rpx;
}
.aboutInfo{
  background: white;
  margin: 30rpx;
  padding: 15rpx;
  border-radius: 15rpx;
}
.card{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  align-items: center;
  color:grey;
  font-size: 30rpx;
}
.card:nth-child(1){
  border-bottom: 1rpx solid #eee;
}
.cardAvatar image{
  width: 30rpx;
  height: 30rpx;
}
.aboutFooter{
  width: 100%;
  color:rgb(54, 54, 240);
  text-align: center;
  /* margin-top: 70rpx; */
  position: absolute;
  bottom: 50rpx;
}